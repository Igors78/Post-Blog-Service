<%= form_with(model: @micropost, local: true) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost...", :rows => 5, style: 'width:100%;' %>
</div>
<%= f.submit "Post", class: "btn btn-primary" %>
<% end %>